programa {
  inclua biblioteca Matematica
  funcao inicio() {
    escreva(" Calculo da área de um circulo")

    real a

    escreva("\n informe o valor do raio do circulo:")
    leia (a)

    real valor = Matematica.PI * a * a

    escreva("\n a área é:", valor)
    escreva("\n Numero pi:", Matematica.PI)
    

    
  }
}
